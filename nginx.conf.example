worker_processes  1;

events {
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;

    sendfile        on;
    keepalive_timeout  65;

    server {
        listen       80;
        server_name  localhost 10.73.148.75;

        # Main site root
        location / {
            root   html;
            index  index.html index.htm;
        }

        # Pochi! Kawaii ne~ Frontend
        location /pochi-kawaii {
            alias   html/pochi-kawaii;
            index  index.html;
            try_files $uri $uri/ /pochi-kawaii/index.html;
        }

        # Pochi! Kawaii ne~ Backend API Proxy
        location /pochi-kawaii/health {
            proxy_pass http://127.0.0.1:4004/health;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_cache_bypass $http_upgrade;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        location /pochi-kawaii/api {
            proxy_pass http://127.0.0.1:4004/api;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_cache_bypass $http_upgrade;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # Error pages
        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   html;
        }
    }
}
